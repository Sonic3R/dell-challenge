@model IEnumerable<DellChallenge.D2.Web.Models.ProductModel>

@{
    ViewData["Title"] = "View";
}
<h4>All Products</h4>
<hr />

@if (Model != null && Model.Any())
{
    foreach (var item in Model)
    {
        <div class="row">
            <div class="col-md-4">
                @item.Name - @item.Category - <a asp-controller="Product" asp-action="Update" asp-route-id="@item.Id">Edit</a> - <a asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </div>
        </div>
    }
}
else
{
    <p>No product here</p>
}